extends base

block content
    if errorMessage
        span=errorMessage
    form(method='POST')
        input(placeholder='name' name='name', type='text', required = true)
        input(placeholder='email' name='email', type='email', required = true)
        input(placeholder='username' name='username', type='text', required = true)
        input(placeholder='password' name='password', type='password', required = true)
        input(placeholder='confirm password' name='password2', type='password', required = true)
        input(placeholder='location' name='location', type='text', required = true)
        input( type='submit',value='Join')
        include partials/social-login
    div.auth-switch
        span Already have an account?
        a(href='/login') Log in now &rarr;